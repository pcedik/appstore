<%= html_import_tag "list", "data-turbolinks-track" => true %>
<core-header-panel>
    
  <core-toolbar>
  	<paper-tabs id="tabs" valueattr="name" selected="all" self-end>
  	<paper-tab name="all">Vse</paper-tab>
  	<% @platforms.each do |plat| %>
	    <paper-tab name="<%= plat.platform %>"><%= plat.platform %></paper-tab>
	<% end %>
  </core-toolbar>

  <!-- main page content will go here --> 
<% 
   @aplikaces.each do |aplikace| 
		@aplikace = aplikace 
%>

		<%= render 'show' %>

	<% end %>

</core-header-panel>

<% if can? :manage, @aplikace %>
	<%= link_to 'Administrace', rails_admin.dashboard_path %>
<% end %>



<script>
    var tabs = document.querySelector('paper-tabs');
    tabs.addEventListener('core-select', function(e) {
      console.log("tab change: " + e.target.getAttribute('name') +" selected = " + e.detail.isSelected);
      console.log("Selected: " + tabs.selected);
    });
</script>