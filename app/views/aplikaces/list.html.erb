<style>
  html,body {
    height: 100%;
    margin: 0;
    background-color: #E5E5E5;
    font-family: 'RobotoDraft', sans-serif;
  }
  core-header-panel {
    height: 100%;
    overflow: auto;
    -webkit-overflow-scrolling: touch; 
  }
  core-toolbar {
    background: #03a9f4;
    color: white;
  }
  #tabs {
    width: 100%;
    margin: 0;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    font-size: 1.0rem;
  }
  .container {
    width: 80%;
    margin: 50px auto;
  }
  @media (min-width: 481px) {
    #tabs {
      width: 350px;
    }
    .container {
      width: 80%;
    }

  }
  .login {
    position: absolute;
    top:5px;
    right: 10px;
    font-size: 0.8rem;
  }
 </style>


<core-header-panel>
    <core-toolbar>
      <paper-tabs id="tabs" selected="all" self-end>
            <paper-tab name="all">Vše</paper-tab>
            <% @platforms.each do |plat| %>
            <paper-tab name="<%= plat.platform %>"><%= plat.platform %></paper-tab>
            <% end %>

      </paper-tabs>
      <div class="login">  
          <% if can? :manage, @aplikace %>
              <b><%= link_to 'Administrace', rails_admin.dashboard_path, style: 'color:white;background-color:#b94a48;padding:2px 4px;border-radius: 3px' %></b>
              &nbsp
          <% end %> 
          <% if current_user %>
            Přihlášen jako <strong><%= current_user.email %></strong>!
            <%= link_to "Odhlásit", destroy_user_session_path, method: :delete, style: 'color:white;' %>
          <% else %>
            <%= link_to "Přihlásit pomocí google", user_omniauth_authorize_path(:google_oauth2), id: "sign_in" %>
      <% end %>
      </div>
    </core-toolbar>
    <div class="container" layout vertical center>
      <apps-list show="all"></apps-list>
    </div>
  </core-header-panel>

  <script>
  var list = document.querySelector('appl-list');
  var tabs = document.querySelector('paper-tabs');

  tabs.addEventListener('core-select', function() {
    list.show = tabs.selected;
  });
  </script>  